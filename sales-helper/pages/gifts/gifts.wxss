page {
  height: 100%;
  background-color: #f5f5f5;
}
image {
  width: 100%;
  height: 100%;
}
.container {  
  height: 100%;
  font-family: PingFangSC-Light,'Helvetica Neue',Helvetica,sans-serif;
  background-color: #333333;
  position: relative;
}
.scanBtn {
  border: 1rpx solid white;
  border-radius: 40rpx;
  width: 600rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #FFF;
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%)
}
.scanCode {
  position: absolute;
  left: 50%;
  top: 53%;
  transform: translate(-50%, -50%);
  width: 210px;
  height: 210px;
}