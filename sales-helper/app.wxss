/**app.wxss**/
.saleDetail{
  padding: 30rpx;
}
.saleDetail .title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background-color: #e5e5e5;
  border-radius: 8rpx 8rpx 0 0;
  text-align: center;
  position: relative;
}
.saleDetail .title picker{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 99;
  height: 38rpx;
}
.saleDetail .title picker .icon-date{
  width: 36rpx;
  height: 38rpx;
  display: block;
}
.saleDetail .saleGather{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}
.saleDetail .saleGather .saleTips{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}
.saleDetail .saleGather .saleMount{
  font-size: 46rpx;
  line-height: 46rpx;
  color: #f08200;
  margin-bottom: 30rpx;
}
.saleDetail .saleGather navigator{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #e82915
}
.saleDetail .mountList{
  padding: 0 30rpx;
}
.saleDetail .mount-item{
  height: 100rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 35rpx;
  position: relative;
}
.saleDetail .mount-item.mountGather{
  font-size: 30rpx;
  color: #333
} 
.saleDetail .mount-item.mountDetail{
  font-size: 26rpx;
  color: #999;
  border-bottom: 1px solid #e8e8e8
}
.icon-arrow{
  width: 15rpx;
  height: 27rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%)
}


.incentive-item{
  font-size: 30rpx;
  color: #333
}
.incentive-item + .incentive-item{
  margin-top: 30rpx;
}
.incentive-item .incentive-head{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #e5e5e5;
  border-radius: 8rpx 8rpx 0 0;
  font-weight: bold;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.incentive-item .incentive-content{
  padding: 0 30rpx;
}
.incentive-item .content-item{
  height: 100rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 35rpx;
  position: relative;
}
.incentive-item .incentive-content .content-item{
  border-bottom: 1px solid #e8e8e8
}
.incentive-item .incentive-content .content-item:last-child{
  border-bottom: none;
}
.none-data{
  font-size:30rpx;
  color:#999;
  text-align: center;
}


