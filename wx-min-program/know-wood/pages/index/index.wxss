/* 筛选列表 start */
.filter-list{
  position: relative;
}
.filter-box{
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 35rpx;
  margin-top: 30rpx;
  padding-bottom: 50rpx;
}
.filter-box text{
  color: #999
}
.filter-box button{
  width: 70rpx;
  height: 36rpx;
  line-height: 1;
  margin: 0;
  padding: 0;
  border-radius: 4rpx;
  border: 1px solid #333;
  color: #333;
  font-size: 26rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.filter-list .list-box{
  margin: 0 35rpx;
  /* margin-top: 50rpx; */
}
/* 筛选列表 end */
.loading-end{
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}
