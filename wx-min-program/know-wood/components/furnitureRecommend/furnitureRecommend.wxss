/* components/furnitureRecommend/furnitureRecommend.wxss */
@import "../../templates/title.wxss";

.goods-list .item{
  position: relative;
  display: inline-block;
  width: 320rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.goods-list .item:nth-child(2n){
  margin-left: 42rpx;
}
.goods-list .goods-img{
  width: 320rpx;
  height: 240rpx;
  background: #ccc;
  margin-bottom: 20rpx;
}
.goods-tit{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 0 15rpx;
  color: #fff;
  font-size: 24rpx;
  background: rgba(182, 136, 77, 0.7);
  box-sizing: border-box;
}