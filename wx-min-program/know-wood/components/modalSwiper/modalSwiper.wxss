/* components/modalSwiper/modalSwiper.wxss */
.title{
  color: #333;
  text-align: center;
  padding-bottom: 22rpx;
  position: relative;
  display: flex;
  justify-content: center;
}
.title text{
  position: relative;
  font-weight: bold;
  margin-bottom: 8rpx;
  line-height: 1;
  z-index: 2;
}
.title text::after{
  content: "";
  position: absolute;
  bottom: 6rpx;
  left: 0;
  width: 100%;
  height: 5rpx;
  background: rgb(225, 193, 149);
  z-index: -1;
}
.icon-title-arrow{
  position: absolute;
  width: 18rpx;
  height: 14rpx;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%)
}
.title-txt{
  position: relative;
  font-size: 36rpx;
  width: auto;
  height: 36rpx;
  line-height: 36rpx;
  font-weight: bold;
}
.title-line{
  position: absolute;
  height: 6rpx;
  width: 100%;
  background-color: #e1c195;
  bottom: 0;
  z-index: -1;
  left: 50%;
  transform: translateX(-50%);
}
.more{
  display: flex;
  align-items: center;
  position: absolute;
  right: 35rpx;
  top: 4rpx;
  font-size: 24rpx;
  color: #999
}
.more image{
  width: 7rpx;
  height: 15rpx;
  margin-left: 10rpx;
}
.wrap-swiper{
  margin-top: 18rpx;
}
.wrap-swiper swiper-item{
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 400rpx;
  overflow: hidden;
}
.wrap-swiper swiper-item image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
swiper-item .woodName{
  position: absolute;
  bottom: 0;
  height: 52rpx;
  width: 100%;
  left: 0rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
swiper-item .woodName image{
  border-radius: 8rpx;
}
swiper-item .woodName text{
  position: absolute;
  left: 40rpx;
  top: 15rpx;
  color: #fff;
  font-size: 24rpx;
}
.indicator-dots{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.indicator-dots .dots{
  width: 10rpx;
  height: 10rpx;
  background-color: #e8e8e8;
  border-radius: 10rpx;
  margin-left: 10rpx;
}
.indicator-dots .dots.active{
  background-color: #e1c195
}