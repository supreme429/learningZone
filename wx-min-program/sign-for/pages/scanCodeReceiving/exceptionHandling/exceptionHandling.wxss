/* pages/scanCodeReceiving/exceptionHandling/exceptionHandling.wxss */
button::after{
  border:none;
}
.container{
  background: #fff;
  height: 100%;
  padding: 0 30rpx 30rpx;
}
.container .header{
  width: 100%;
  height: 133rpx;
  margin-top:  30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #dbdbdb;
  display: flex;
  justify-content: flex-start;
  align-items: center;

}
.header .header_left{
  width: 200rpx;
  height: 133rpx;
  margin-right: 20rpx;
  display: inline-block;
  max-width: 30%;
}
.header .header_right{
  max-width: 70%;
  display: inline-block;
  font-size: 26rpx;
}
.header_right .right_title{
  width: 100%;
  color: #333;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;/*超出部分文字以...显示*/
}
.right_common{
  color: #999;
}
.right_num{
  display: inline-block;
  border:1rpx solid #d8d8d8;
  border-radius: 6rpx;
  height: 51rpx;
  line-height: 51rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  vertical-align: middle;
}
.num_button{
  background: #fff;
  line-height: 51rpx;
  display: inline-block;
  text-align: center;
  color: #666;
  vertical-align: top;
}
.num_none{
  color: #d8d8d8;
}
.num_input{
  width: 70rpx;
  display: inline-block;
  padding: 0 20rpx;
  height: 51rpx;
  border-left: 1px solid #d8d8d8;
  border-right: 1px solid #d8d8d8;
  text-align: center;
  overflow: hidden;
}
.container .middle{
  width: 100%;
}
.middle_title{
  margin: 50rpx 0 30rpx 0;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.middle_desc{
  font-size: 26rpx;
  color: #fff;
}
.common_select{
  border-radius: 6rpx;
  text-align: center;
  padding: 0 20rpx;
  height: 58rpx;
  line-height: 58rpx;
  display: inline-block;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
}
.desc-select{
  background: #e62318;
}
.desc-noselect{
  background: #cccccc;
}
.middle_other{
  position: relative;
  margin-top: 30rpx;
  width: 100%;
  height: 280rpx;
  border:1rpx solid #d8d8d8;
  border-radius:10rpx;

}
.middle_textarea{
  width: auto;
  height: 200rpx;
  font-size: 26rpx;
  padding-left:20rpx;
  padding-top:10rpx;  
  
}
.textarea_placeHolder{
  color: #bbb;
  font-size: 26rpx;
}
.textarea_num{
  color: #bbb;
  font-size: 26rpx;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}
.middle_img{
  margin: 50rpx 0;
}
.middle_img_text{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
  border:1rpx solid #aaaaaa;
  text-align: center;
  margin-right: 20rpx;
  vertical-align: top;
}
.photo_icon{
  margin-top: 20rpx;
  width: 49rpx;
  height: 40rpx;
}
.img-desc{
  font-size: 22rpx;
  color: #777;
  margin-top: 8rpx;
}
.middle_add_img{
  display: inline-block;
  position: relative;
  width: 122rpx;
  height: 122rpx;
  background: #e7e7e7;
  margin-right: 30rpx;
}
.img_item{
  width: 100%;
  height: 100%;
  
}
.del_icon{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:-7rpx;
  right: -7rpx;
}
.middle_deal{
  margin: 30rpx 0 ;
}
.deal_text{
   font-size: 26rpx;
   color: #666;
   margin-right: 10rpx;
}
.deal_button{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
  border:1rpx solid #999999;
  border-radius: 3rpx;
  margin-left: 20rpx;
  background: #fff;
  display: inline-block;
  vertical-align: middle;
}
.selected_button{
  background: #e62318;
  border:none;
  color: #fff;
}
.container .footer{
  background: #e62318;
  width: 100%;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border:none;
}
.errorcontent{
  background:rgba(0, 0, 0, .7);
  padding: 16rpx 20rpx;
  color: #fff;
  font-size: 24rpx;
  border-radius: 10rpx;
  position: fixed;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 99;
  animation: showError 3s ease
}
@-webkit-keyframes showError{
  0% {opacity: 0}
  100%{opacity: 1}
}

.big-back{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 1);
  z-index: 999;
}
.big-img-info{
 display: flex;
 align-items: center;
 justify-content: center;
 z-index: 20;
 width: 100%;
 height: 100%;
}
.big-img-desc{
  z-index: 20;
  width: 100%;
  height: 100%;
}