/* pages/scanCodeReceiving/serviceEvaluationComplate/serviceEvaluationComplate.wxss */
.container{
  padding: 75rpx 35rpx 35rpx 35rpx;
}

.title{
  text-align: center;
  font-size: 34rpx;
  font-weight: bold
}
.couponBox{
  width: 560rpx;
  height: 260rpx;
  margin: 0 auto;
  position: relative;
  margin-top: 30rpx;
}

.couponBox .couponBg{
  font-size: 0
}
.couponBox .couponBg image{
  width: 560rpx;
  height: 260rpx;
}
.couponContent{
  position: absolute;
  width: 520rpx;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column
}
.couponContent .amount{
  font-size: 102rpx;
  color: #fff;
  font-weight: bold;
  height: 102rpx;
  display: flex;
  line-height: 102rpx
}
.couponContent .line{
  width: 318rpx;
  height: 7rpx;
  background-color: #fff;
  margin-top: 15rpx;
}
.couponContent .couponName{
  font-size: 28rpx;
  color: #fff;
  margin-top: 10rpx;
  width: 320rpx;
  text-align: justify;
  text-align-last: justify;
}
.couponContent .couponName::after{
  content:"";
  display:inline-block;
  width:100%;
}
.codeBox{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 45rpx;
}
.codeBox .code{
  font-size: 30rpx;
  color: #333
}
.codeBox .btn-copyCode{
  display: inline-block;
  width: 110rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 2rpx solid #666666;
  border-radius: 4rpx;
  text-align: center;
}
.go-index{
  display: block;
  width: 560rpx;
  height: 94rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 94rpx;
  border-radius: 5rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.useInfoBox{
  margin-top: 70rpx;
  padding-top: 45rpx;
  border-top: 1px solid #d8d8d8
}
.useInfoBox .userInfoTitle{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.useInfoBox .useInfoItem{
  font-size: 24rpx;
  color: #333;
  margin-top: 15rpx;
}

/* toast */
.toast{
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 15rpx;
}
.toast .toast-content{
  width: 328rpx;
  height: 328rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
  padding-top: 50rpx;
  box-sizing: border-box
}
.toast .toast-icon{
  width: 129rpx;
  height: 129rpx;
}
.toast .toast-icon image{
  width: 129rpx;
  height: 129rpx;
}
.toast .toast-info{
  margin-top: 50rpx;
}

/* 提交成功 */
.evaSuccess{
  text-align: center;
  font-size: 0;
  margin-top: -12rpx;
}
.evaSuccess .success-icon image{
  width: 131rpx;
  height: 131rpx;
}
.evaSuccess .success-info{
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  margin-top: 30rpx;
}

/* 红包弹框 */
.modal{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5)
}
.modalRedConten{
  position: absolute;
  left: 50%;
  top: 312rpx;
  transform: translateX(-50%)
}
.modalRedConten .red-bg image{
  width: 500rpx;
  height: 666rpx
}
.modalRedConten .red-close{
  position: absolute;
  left: 23rpx;
  top: 23rpx;
  width: 25rpx;
  height: 25rpx;
}
.modalRedConten .red-close image{
  width: 25rpx;
  height: 25rpx;
}
.modalRedConten .redInfo{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 64rpx;
  font-size: 26rpx;
  color: #ffebaf
}
.modalRedConten .redInfo .mllLogo{
  font-size: 0
}
.modalRedConten .redInfo .mllLogo image{
  width: 70rpx;
  height: 70rpx;
}
.modalRedConten .redInfo .companyName{
  margin-top: 15rpx;
}
.modalRedConten .redInfo .info{
  margin-top: 15rpx;
}
.modalRedConten .red-open{
  font-size: 0;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 147rpx;
  width: 155rpx;
  height: 155rpx;
  border-radius: 50%;
}
.modalRedConten .red-open image{
  width: 148rpx;
  height: 148rpx;
}