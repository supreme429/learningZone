page{
  height:100%;
}
.container{
  height: 100%;
  box-sizing: border-box;
  background-color: #f5f5f5;
}
.container>scroll-view{
  padding-bottom: 100rpx;
  box-sizing: border-box
}

.banner{
  position: relative
}
swiper{
  height: 300rpx;
  display: flex
}
.slide-image{
  width: 100%;
  height: 300rpx;
}
.indicatorDots{
  position: absolute;
  left: 50rpx;
  bottom: 20rpx;
  display: flex
}
.indicatorDots view{
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  background: rgba(225, 225, 225, 0.5);
  margin-right: 10rpx;
}
.indicatorDots view.active{
  background: #fff;
  animation: animateIndicatorDots 0.5s linear 0s forwards
}
.location-box{
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translate(-50%);
  background-color: #fff;
  border: 1px solid #e8e8e8;
  width: 702rpx;
  height: 75rpx;
  border-radius: 8rpx;
  z-index: 8;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}
.box-left{
  display: flex;
  align-items: center
}
.location-icon{
  width: 20rpx;
  height: 24rpx;
  margin-right: 20rpx;
}
.load-more-icon{
  width: 15rpx;
  height: 28rpx;
}
.location-bg{
  position: absolute;
  bottom: 0;
  width: 100%;
  font-size: 0;
}
.location-bg image{
  width: 100%;
  height: 86rpx;
}

/* 分类导航样式start */
.classify-tab{
  width: 100%;
  height: 87rpx;
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  justify-content: space-between;
  padding: 0 23rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background-color: #fff
}
.classify-item{
  font-size: 26rpx;
  color: #333;
  height: 87rpx;
  box-sizing: border-box;
  line-height: 87rpx;
  text-align: center;
  width: 220rpx;
  padding: 0 25rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0)
}
.classify-item.active{
  color: #e62318;
  border-bottom: 1px solid #e62318
}
.detail-classify{
  display: flex;
  align-items: center;
  justify-content: center;
}
.detail-classify text{
  max-width: 130rpx;
  text-overflow: ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.detail-classify image{
  width: 28rpx;
  height: 22rpx;
  margin-left: 10rpx;
}
/* 分类导航样式end */

/* gooditem样式start */
.modal-noStock{
  width: 208rpx;
  height: 208rpx;
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius:4rpx;
  color: #fff;
  font-size: 32rpx;
}
.goodsList{
  background-color: #fff
}
.goodsList .goodsItem .goods-detail{
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.goodsList .goodsItem .goods-detail .bargainDetal{
  font-size: 24rpx;
}
.goodsList .goodsItem .goods-detail .bargainDetal{
  display: flex;
  justify-content: space-between;
  align-items: flex-end
}
.goodsList .goodsItem .goods-detail .bargainDetal .joinPersonNum{
  color: #666666
}
.goodsList .goodsItem .goods-detail .bargainDetal .goodsPrice{
  color: #e62318
}
.goodsList .goodsItem .goods-detail .bargainDetal .bargainResult{
  width: 190rpx;
  height: 80rpx;
  color: #fff;
  background-color: #e62318;
  text-align: center;
  font-size: 24rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center
}
.goodsList .goodsItem .goods-detail .bargainDetal .bargainResult text{
  word-break: break-all
}
.goodsList .goodsItem .goods-detail .bargainDetal .bargainResult.out{
  background-color: #fff;
  line-height: normal;
  color: #e62318;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  font-size: 26rpx;
}
.goodsList .goodsItem .icon-share{
  position: absolute;
  top: 20rpx;
  right: 5rpx;
  font-size: 0
}
.goodsList .goodsItem .icon-share button{
  border:none;
  padding: 5rpx;
  font-size: 0;
  line-height: normal
}
.goodsList .goodsItem .icon-share image{
  width: 32rpx;
  height: 24rpx;
}

/* 没有商品模块显示样式start */
.noGoods{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 0;
}
.noGoods .icon-noGoods{
  margin-top: 180rpx;
  width: 180rpx;
  height: 180rpx;
}
.noGoods .txt-noGoods{
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999
}
.noGoods .txt-noGoods text{
  color: #e62318
}
/* 没有商品模块显示样式end */

/* 预售模块样式start */
.readyGoods .priceDetail{
  display: flex;
  font-size: 22rpx;
  margin-top: 20rpx;
}
.goodsList .goodsItem.readyGoods .goods-detail .goodsIndro .goodsName{
  width: 432rpx;
  height: 26rpx;
  line-height: 26rpx;
  overflow:hidden;
  text-overflow:ellipsis;

}
.readyGoods .priceDetail .lowestPrice{
  margin-right: 40rpx;
  color: #e62318
}
.readyGoods .noFollow{
  height: 80rpx;
  width: 190rpx;
  background-color: #e62318;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 6rpx;
}
.readyGoods .hasFollow{
  height: 80rpx;
  width: 190rpx;
  border:1px solid #e62318;
  border-radius: 6rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 80rpx;
}
.readyGoods .hasFollow button{
  font-size: 24rpx;
  height: 100%;
  line-height: 80rpx;
  color: #e62318;
  border: none;
}
.readyGoods .noFollow button{
  font-size: 24rpx;
  height: 100%;
  line-height: 80rpx;
  color: #fff;
  border: none;
}
/* 预售模块样式end */

@keyframes animateIndicatorDots{
  0%{
    width: 10rpx;
  }
  100%{
    width: 20rpx
  }
}