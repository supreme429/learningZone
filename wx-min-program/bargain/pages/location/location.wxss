/* pages/location/location.wxss */
page{
  background: #f5f5f5;
}
.location-address{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background: #fff;
  font-size: 28rpx;
  color: #999;
  padding-right: 24rpx;
  box-sizing: border-box;
}
.location-address .icon-positioning3{
  margin: 0 21rpx;
  width: 20rpx;
  height: 24rpx;
}

.location-address .icon-positioning4{
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

button.btn-reset,
button.btn-reset::after{
  color: #5bb0ff;
  border: 0;
  background: none;
  display: inline;
  margin: 0;
  padding: 0;
  font-size: 28rpx;
}

.h2{
  font-size: 24rpx;
  color: #999;
  padding: 30rpx 24rpx;
  display: block;
}
.h2.warn{
  color: #ff5555;
}

.select-area{
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  border: 1px solid #e8e8e8;
  border-left: 0;
  border-right: 0;
  background: #fff;
  padding-left: 24rpx;
  font-size: 34rpx;
  display: flex;
}
.select-area .label{
  width: 200rpx;
}
.selecter{
  color: #999;
  margin-left: 60rpx;
  width: 100%;
}

.btn-confirm{
  position: fixed;
  bottom: 50rpx;
  width: 600rpx;
  box-sizing: border-box;
  background: #e62318;
  color: #fff;
  margin: 0 74rpx;
  font-size: 34rpx;
}

.btn-confirm.disabled{
  background: #ccc;
}