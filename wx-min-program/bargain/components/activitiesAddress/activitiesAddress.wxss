/* components/activitiesAddress/activitiesAddress.wxss */
.picker-datetime{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 99;
}
.picker-view-box{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  text-align: center;
}

.btn-box{
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
} 
.btn-box button,
.btn-box button::after,
.btn-box button:hover,
.btn-box button:active{
  margin: 0;
  background: none;
  border: 0;
}
.btn-box .cancel{
  color: #555;
}
.btn-box .confirm{
  color: #4CAF50;
}