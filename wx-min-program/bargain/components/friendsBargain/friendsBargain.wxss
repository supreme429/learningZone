/* components/friendsBargain/friendsBargain.wxss */
.friendsBargainList{
  max-height: 300rpx;
  height: 300rpx;
}
.friendsBargainItem{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e8e8e8;
  align-items: center;
}
.personInfo{
  display: flex;
  font-size: 0;
  align-items: center
}
.personInfo image{
  height: 72rpx;
  width: 72rpx;
  border-radius: 36rpx;
  margin-right: 20rpx;
}
.personInfo .textInfo{
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
  color: #999999
}
.personInfo .firstHelp{
  font-size: 0;
  display: flex;
  height: 63rpx;
}
.personInfo .firstHelp image{
  border-radius: 0
}
.personInfo .firstHelp .icon-firstBargain{
  width: 36rpx;
  height: 63rpx;
  margin-left: 18rpx;
}
.personInfo .firstHelp .icon-violentAttack{
  width: 43rpx;
  height: 63rpx
}
.personInfo .textInfo .nickName{
  font-size: 24rpx;
  color: #333
}
.bargainInfo{
  font-size: 0;
  display: flex;
  align-items: center
}
.bargainInfo text{
  font-size: 24rpx;
  color: #333;
  margin-left: 20rpx;
}
.bargainInfo image{
  height: 36rpx;
  width: 36rpx;
  border-radius: 50%;
}
.helpTime{
  color: #999;
  font-size: 18rpx;
  margin-top: 5rpx;
  text-align: right
}
