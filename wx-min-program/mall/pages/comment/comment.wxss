/* pages/comment/comment.wxss */
.comment-tab {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #ddd;
}
.comment-tab .tab-item {
  display: inline-block;
  padding: 35rpx 4rpx 27rpx;
  border-bottom: 4rpx solid transparent;
  line-height: 32rpx;
  font-size: 32rpx;
  color: #888;
}
.comment-tab .tab-item.active {
  border-color: #353535;
  /* font-family: PingFangSC-Medium; */
  color: #353535;
} 
.comment-tab .tab-item text {
  display: block;
  margin-top: 10rpx;
  line-height: 24rpx;
  text-align: center;
  font-size: 24rpx;
}

.comment-list {
  padding: 0 35rpx 35rpx;
}
.comment-list .list-item {
  padding: 35rpx 0;
  border-bottom: 1rpx solid #ddd;
}
.list-item .comment-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 35rpx;
  font-size: 26rpx;
  color: #b2b2b2;
}
.list-item .user-name, .list-item .add-time {
  height: 26rpx;
  line-height: 32rpx;
}
.list-item .level {
  width: 177rpx;
  height: 27rpx;
}
.list-item .level view {
  height: 27rpx;
  background: url(data:image/png;base64,) repeat-x;
  background-size: 37rpx 27rpx;
}
.list-item .comment-content {
  line-height: 32rpx;
  font-size: 28rpx;
  color: #888;
}
.list-item .comment-img {
  margin-top: 23rpx;
  white-space: nowrap;
  font-size: 0;
}
.list-item .comment-img image {
  width: 206rpx;
  height: 136rpx;
  margin-right: 22rpx;
  margin-top: 22rpx;
}