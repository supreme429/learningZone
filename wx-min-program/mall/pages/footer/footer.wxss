/* pages/footer/footer.wxss */
.nav{background-color: #fff;width: 100%;height: 100rpx;border-top: 1px solid #e2e2e2;position: fixed;left: 0;bottom: 0;display: flex;justify-content: space-around;align-items: center;}
.nav-box image{width: 40rpx;height: 40rpx;}
.nav-box{font-size: 26rpx;text-align: center;color: #ccc;line-height: 30rpx;height: 100rpx;display: flex;flex-direction: column;text-align: center;align-items: center;justify-content: space-around;padding: 0 40rpx;}
button{background-color: #fff;padding: 0;height: 100rpx;line-height: 30rpx;font-size: 26rpx;color: #ccc;display: flex;flex-direction: column;text-align: center;align-items: center;justify-content: space-around;}
button::after{border: 0;}
.active{color: red;}