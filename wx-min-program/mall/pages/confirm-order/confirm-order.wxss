/* pages/confirm-order/confirm-order.wxss */
page{background-color: #f5f5f5;}
.flex-first{display: flex;display: -webkit-flex;justify-content: flex-start;align-items: center;}
.flex-around{display: flex;display: -webkit-flex;justify-content: space-around;align-items: center;}
.flex-between{display: flex;display: -webkit-flex;justify-content: space-between;align-items: center;}
.omit{overflow: hidden;text-overflow:ellipsis;white-space: nowrap}
.addr-content{background-color: #fff;padding: 0 35rpx;height: 147rpx;border-bottom: 1px solid #e5e5e5;flex-direction: column;align-items: flex-start;justify-content: center;}
.personal-info{font-size: 32rpx;color: #353535;}
.addr{width: 100%;font-size: 28rpx;color: #aaaaaa;margin-top: 20rpx;}
.un-address{background-color: #fff;padding: 0 35rpx;height: 147rpx;border-bottom: 1px solid #e5e5e5;text-align: center;line-height: 147rpx;font-size: 30rpx;color: #898989;}
.goods-content{margin-top: 20rpx;background-color: #fff;padding-left: 35rpx;}
.goods-title{font-size: 32rpx;color: #353535;line-height: 90rpx;border-bottom: 1px solid #e5e5e5;border-top: 1px solid #e5e5e5;}
.goods-info{padding: 30rpx 35rpx 20rpx 0;}
.goods-img{width: 265rpx;height: 175rpx;margin-right: 35rpx;}
.info-content{width: 415rpx;flex-direction: column;align-items: flex-start;font-size: 28rpx;min-height: 175rpx;}
.express-type{line-height: 55rpx;}
.price-num{width: 100%;font-size: 28rpx;color: #888888;}
.price-num view{color: #c81c28;}
.picker{height: 55rpx;margin-left: 20rpx;line-height: 55rpx;border: 1px solid #dfdfdf;padding: 0 12rpx 0 20rpx;border-radius: 4px;font-size: 28rpx;position: relative;}
.picker text{color: #dfdfdf;font-weight: bold;font-size: 35rpx;padding-left: 20rpx;}
/* .picker:before{ width: 0;height: 0;border: 10px solid transparent;
border-left-color: orange;position: absolute;content: "";} */
.picker:before{top: 0;left: 70px;border-left-color: white;} 
.service-content{background-color: #fff;padding-left: 35rpx;margin-top: 20rpx;border-bottom: 1px solid #e5e5e5;}
.title{line-height: 80rpx;font-size: 32rpx;color: #000;}
.service-type view{font-size: 26rpx;color: #b2b2b2;line-height: 60rpx;padding: 0 30rpx;border: 1px solid #b2b2b2;border-radius: 4px;}
.service-type .select{border-color: #d6545d;color: #d6545d;}
.service-style{line-height: 100rpx;height: 100rpx;font-size: 32rpx;color: #d9d9d9;padding-right: 35rpx;border-bottom: 1px solid #e5e5e5;}
.service-style:last-child{border: 0;}
.service-cont{width: 445rpx;height: 100rpx;line-height: 100rpx;}
.service-style image{width: 20rpx;height: 30rpx;}
.service-label{width: 215rpx;color: #000;}
.service-cont input{display: block;height: 100rpx;}
.order-monry{height: 100rpx;padding-right: 35rpx;justify-content: flex-end;font-size: 32rpx;color: #000;}
.order-monry view{color: #c81c28;padding: 0 20rpx;}
.blank{height: 160rpx;}
.pay-content{position: fixed;width: 100%;height: 100rpx;left: 0;bottom: 0;background-color: #000;color: #fff;font-size: 32rpx;z-index: 5;}
.pay-money{width: 515rpx;padding-left: 35rpx;}
.pay-btn{background-color: #c81c28;line-height: 100rpx;text-align: center;width: 235rpx;}
