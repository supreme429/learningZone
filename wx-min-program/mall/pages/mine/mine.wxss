/* pages/mine/mine.wxss */
page {
  background-color: #f4f4f4;
}

.mine-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 35rpx;
  margin-bottom: 12rpx;
  background-color: #fff;
}
.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user-info .user-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 40rpx;
}
.user-info .user-img image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-info .name {
  display: block;
  margin-bottom: 26rpx;
  line-height: 36rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #353535;
}
.user-info .vip {
  display: block;
  line-height: 26rpx;
  font-size: 26rpx;
  color: #aaa;
}
.mine-header .user-change {
  font-size: 26rpx;
  color: #999;
}

.mine-floor {
  margin-bottom: 12rpx;
  background-color: #fff;
}
.mine-floor .mine-floor-title {
  border-bottom: 1rpx solid #e5e5e5;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #353535;
}
.mine-floor .mine-floor-title navigator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 87rpx;
  padding: 0 35rpx;
}
.mine-floor .mine-floor-title .arrow-right {
  width: 15rpx;
  height: 25rpx;
}

.mine-order-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0 26rpx;
  font-size: 24rpx;
  color: #666;
}
.mine-order-nav navigator {
  position: relative;
}
.mine-order-nav .nav-img {
  display: block;
  width: 54rpx;
  height: 54rpx;
  margin: 0 auto 8rpx;
}
.mine-order-nav .order-num {
  position: absolute;
  top: 0;
  right: -5rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background-color: #c81c28;
}
.mine-favorite {
  margin-bottom: 0;
}