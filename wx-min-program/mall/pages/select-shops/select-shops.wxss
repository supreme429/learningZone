/* pages/select-shops/select-shops.wxss */
page{background-color: #f5f5f5;}
.flex-first{display: flex;display: -webkit-flex;justify-content: flex-start;align-items: center;}
.flex-around{display: flex;display: -webkit-flex;justify-content: space-around;align-items: center;}
.flex-between{display: flex;display: -webkit-flex;justify-content: space-between;align-items: center;}
.omit{overflow: hidden;text-overflow:ellipsis;white-space: nowrap;}
.box{margin-top: 22rpx;}
.addr-list{background-color: #fff;padding: 0 35rpx;height: 170rpx;border-bottom: 1px solid #e5e5e5;flex-direction: column;justify-content: center;}
.addr-list:last-child{border: 0;}
.shops-name{width: 100%;}
.name image{width: 45rpx;height: 45rpx;margin-right: 20rpx;}
.name view{font-size: 32rpx;color: #000;max-width: 400rpx;}
.shops-phone{font-size: 28rpx;color: #000;}
.shops-addr{margin-top: 15rpx;}
.shops-addr,.distance{width: 100%;}
.blank{width: 65rpx;}
.addr-text image{width: 20rpx;height: 26rpx;margin-left: 15rpx;}
.addr-text view{font-size: 28rpx;color: #aaaaaa;max-width: 560rpx;}
.distance{font-size: 28rpx;color: #aaaaaa;}
.marginBottom{height: 120rpx;}
.btn-box{position: fixed;left: 0;bottom: 0;width: 100%;height: 100rpx;background-color: #fff;}
.btn-box view{width: 50%;line-height: 100rpx;font-size: 32rpx;text-align: center;}
.btn-box view:nth-child(1){color: #000;}
.btn-box view:nth-child(2){color: #fff;background-color: #c81c28;}
