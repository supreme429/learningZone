/* pages/use-coupon/use-coupon.wxss */
page{background-color: #f5f5f5;}
.flex-first{display: flex;display: -webkit-flex;justify-content: flex-start;align-items: center;}
.flex-around{display: flex;display: -webkit-flex;justify-content: space-around;align-items: center;}
.flex-between{display: flex;display: -webkit-flex;justify-content: space-between;align-items: center;}
.omit{overflow: hidden;text-overflow:ellipsis;white-space: nowrap;}
.filter-box{background-color: #fff;padding: 0 35rpx;}
.search-box{width: 100%;padding: 15rpx 0;}
.search-box view{width: 500rpx;height: 55rpx;background-color: #eeeeee;border-radius: 4px;font-size: 28rpx;padding: 0 15rpx;}
.search-box text{font-size: 28rpx;color: #c81c28;}
.coupon-tab view{line-height: 85rpx;text-align: center;font-size: 32rpx;color: #888888;border-bottom: 2px solid transparent;}
.coupon-tab .checked{color: #353535;border-bottom: 2px solid #353535;}
.coupon-box{padding: 0 35rpx;}
.coupon-list{margin-top: 20rpx;background-color: #fff;padding: 0 35rpx;height: 190rpx;border-radius: 15rpx;}
.coupon-money image{width: 46rpx;height: 46rpx;margin-right: 20rpx;}
.money{font-size: 40rpx;color: #c81c28;font-weight: bold;}
.money view{font-size: 80rpx;color: #c81c28;font-weight: bold;height: 80rpx;}
.money text{height: 60rpx;}
.coupon-name{height: 80rpx;font-size: 28rpx;align-items: flex-end;}
.names{max-width: 300rpx;}
.coupon-state,.coupon-time{font-size: 25rpx;color: #aaaaaa;margin-top: 20rpx;}
.marginBottom{height: 120rpx;}
.btn-box{position: fixed;left: 0;bottom: 0;width: 100%;height: 100rpx;background-color: #fff;}
.btn-box view{width: 50%;line-height: 100rpx;font-size: 32rpx;text-align: center;}
.btn-box view:nth-child(1){color: #000;}
.btn-box view:nth-child(2){color: #fff;background-color: #c81c28;}
