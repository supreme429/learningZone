<!--components/modalShare/modalShare.wxml-->
<view class='container'>
  <view class='content'>
    <view class='title'>
      分享
      <image src='/images/icon-close.png' bindtap='close'></image>
    </view>
    <view class='handleBox'>
      <button open-type='share' class='handle-item'>
        <image src='/images/icon-wx.png'></image>
        <text>发送给朋友</text>
      </button>
      <view class='handle-item' bindtap='proPoster'>
        <image src='/images/icon-proPoster.png'></image>
        <text>生成海报</text>
      </view>
    </view>
  </view>
</view>
