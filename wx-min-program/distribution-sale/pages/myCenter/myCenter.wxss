/* pages/myCenter/myCenter.wxss */
.login-info{
  height: 240rpx;
  display: flex;
  align-items: center;
  border-bottom: 20rpx solid #f5f5f5;
  padding: 0 30rpx;
  position: relative;
  font-size: 30rpx;
  color: #333;
}
.login-info .info{
  margin-left: 30rpx;
}
.login-info .info text{
  display: block;
}

button.btn-logout{
  position: absolute;
  right: 44rpx;
  margin: 0;
  padding: 0 50rpx;
  font-size: 28rpx;
  color: #333;
  border: 0;
}
button.btn-logout::after{
  border: 0;
}


.icon-head{
  width: 120rpx;
  height: 120rpx;
}

.menu-list .item{
  margin-left: 46rpx;
  margin-right: 44rpx;
  height: 117rpx;
  justify-content: space-between;
  font-size: 28rpx;
  border-bottom: 1px solid #eeeeee;
}
.menu-list .item navigator{
  display: inline;
  color: #487eac;
  margin-left: 20rpx;
}